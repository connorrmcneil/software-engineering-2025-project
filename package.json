{
  "name": "swe-project",
  "version": "0.1.0",
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cypress": "^15.7.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "private": true,
  "scripts": {
    "dev": "concurrently \"bun run --filter=front-end dev\" \"bun run --filter=api dev\"",
    "format": "prettier --write ./packages/**/*.{js,jsx,ts,tsx,json,css,md}",
    "typecheck": "tsc -b --noEmit packages/*",
    "build": "concurrently \"bun run --filter=front-end build\" \"bun run --filter=api build\"",
    "test": "cypress open"
  },
  "workspaces": [
    "packages/*"
  ],
  "trustedDependencies": [
    "@swc/core",
    "api"
  ]
}
